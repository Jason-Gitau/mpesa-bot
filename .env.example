# ====================================
# M-PESA TELEGRAM BOT CONFIGURATION
# ====================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# ====================================
# TELEGRAM BOT CONFIGURATION
# ====================================
# Get your bot token from @BotFather on Telegram
# Format: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram Chat ID (use @userinfobot to get it)
# This is where payment notifications will be sent
SELLER_CHAT_ID=your_telegram_chat_id_here

# ====================================
# M-PESA API CONFIGURATION (SANDBOX)
# ====================================
# Get these from https://developer.safaricom.co.ke/
# Create a new app and select "Lipa Na M-Pesa Sandbox"

# Consumer Key (Client ID)
MPESA_CONSUMER_KEY=your_consumer_key_here

# Consumer Secret (Client Secret)
MPESA_CONSUMER_SECRET=your_consumer_secret_here

# Business Short Code (Sandbox default: 174379)
MPESA_SHORTCODE=174379

# Passkey (get from Daraja portal test credentials)
MPESA_PASSKEY=your_passkey_here

# ====================================
# M-PESA API CONFIGURATION (PRODUCTION)
# ====================================
# Uncomment these when ready to go live
# Apply for production credentials on Daraja portal

# MPESA_CONSUMER_KEY=your_production_consumer_key
# MPESA_CONSUMER_SECRET=your_production_consumer_secret
# MPESA_SHORTCODE=your_production_shortcode
# MPESA_PASSKEY=your_production_passkey

# ====================================
# DATABASE CONFIGURATION
# ====================================
# Required for weekendvibe.py (advanced version)
# You can use MySQL, PostgreSQL, or Supabase

# Database Host (localhost for local, or remote host)
DB_HOST=localhost

# Database Port (default: 3306 for MySQL, 5432 for PostgreSQL)
DB_PORT=3306

# Database Name
DB_NAME=mpesa_bot

# Database User
DB_USER=root

# Database Password
DB_PASSWORD=your_database_password_here

# ====================================
# SUPABASE CONFIGURATION (ALTERNATIVE)
# ====================================
# If using Supabase instead of local database
# Get these from your Supabase project settings

# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your_supabase_anon_key

# ====================================
# APPLICATION CONFIGURATION
# ====================================
# Application environment (development, staging, production)
APP_ENV=development

# Application port for FastAPI callback server
APP_PORT=8000

# Callback URL for M-Pesa notifications
# For local testing, use ngrok: https://your-ngrok-url.ngrok.io/mpesa-callback
# For production, use your domain: https://yourdomain.com/mpesa-callback
CALLBACK_URL=https://your-callback-url.com/mpesa-callback

# ====================================
# LOGGING CONFIGURATION
# ====================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/mpesa-bot.log

# ====================================
# SECURITY CONFIGURATION
# ====================================
# Secret key for encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# ====================================
# OPTIONAL FEATURES
# ====================================
# Enable/disable features (true/false)
ENABLE_DATABASE=true
ENABLE_NOTIFICATIONS=true
ENABLE_LOGGING=true

# Maximum payment amount (in KES)
MAX_PAYMENT_AMOUNT=70000

# Minimum payment amount (in KES)
MIN_PAYMENT_AMOUNT=1
